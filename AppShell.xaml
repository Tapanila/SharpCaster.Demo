<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SharpCaster.Demo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SharpCaster.Demo"
    Shell.FlyoutBehavior="Disabled"
    Title="SharpCaster.Demo">
    <TabBar>
        <ShellContent
            Title="Devices"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Commands"
            ContentTemplate="{DataTemplate local:CommandPage}"
            Route="CommandPage" />
    </TabBar>

</Shell>
